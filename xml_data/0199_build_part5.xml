  <target name="compile">
    <mkdir dir="${build.dir}/classes" />
    <javac 
           destdir="${build.dir}/classes"
           debug="true"
           verbose="false"
           source="1.6"
           target="1.6"
           encoding="UTF-8"
           fork="true"
           deprecation="false"
           includeantruntime="false">
      <src path="${src.dir}/java" />
      <include name="**/*.java" />
      <classpath>
        <fileset dir="${lib.dir}">
          <include name="*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>